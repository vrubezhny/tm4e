<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="css"
            id="org.eclipse.tm4e.samples.css"
            name="CSS"
            priority="normal">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="json"
            id="org.eclipse.tm4e.samples.json"
            name="JSON"
            priority="normal">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="cs"
            id="org.eclipse.tm4e.samples.csharp"
            name="C#"
            priority="normal">
      </content-type>
   </extension>

   <!-- TextMate Themes -->
   <!--<extension
         point="org.eclipse.tm4e.ui.themes">
      <themeContentTypeBinding
            contentTypeId="org.eclipse.languageserver.languages.css"
