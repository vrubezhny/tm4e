      </themeContentTypeBinding>
      <themeContentTypeBinding
            contentTypeId="org.eclipse.tm4e.samples.php"
            themeId="org.eclipse.tm4e.ui.themes.SolarizedLight">
      </themeContentTypeBinding>
      <themeContentTypeBinding
            contentTypeId="org.eclipse.tm4e.samples.html"
            themeId="org.eclipse.tm4e.ui.themes.SolarizedLight">
      </themeContentTypeBinding>
      <themeContentTypeBinding
