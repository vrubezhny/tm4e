<plugin>

   <extension-point id="themes" 
   					name="%Themes.extension.name"
					schema="schema/themes.exsd" />
					
   <!-- Register default TextMate Themes -->
   <extension
         point="org.eclipse.textmate4e.ui.themes">
      <theme
            id="org.eclipse.textmate4e.ui.themes.Light"
      		name="%Theme.Light.name"
            path="./themes/Light.css" >
      </theme>
      <theme
            id="org.eclipse.textmate4e.ui.themes.SolarizedLight"
      		name="%Theme.SolarizedLight.name"
            path="./themes/Solarized-light.css"
            defaultForE4ThemeId="*" >
      </theme>
      <theme
            id="org.eclipse.textmate4e.ui.themes.Dark"
      		name="%Theme.Dark.name"
            path="./themes/Dark.css"
            defaultForE4ThemeId="org.eclipse.e4.ui.css.theme.e4_dark" >            
      </theme>         
   </extension>
   					
</plugin>
